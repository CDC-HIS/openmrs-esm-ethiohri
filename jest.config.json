{
  "transform": {
    "^.+\\.tsx?$": "babel-jest"
  },
  "transformIgnorePatterns": [
    "/node_modules/(?!@openmrs)",
    "/node_modules/(?!@@ohri)"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/src/setup-tests.ts"
  ],
  "testEnvironment": "jsdom",
  "testEnvironmentOptions": {
    "url": "http://localhost/"
  }
}
