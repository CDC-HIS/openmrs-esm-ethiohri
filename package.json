    "rxjs": "^7.8.1",
    "swr": "^2.2.4",
    "typescript": "^4.9.3",
    "webpack": "^5.88.0"
  },
  "resolutions": {
    "@carbon/react": "1.13.0",
    "@carbon/icons-react": "11.26.0"
  },
  "packageManager": "yarn@4.1.1"
