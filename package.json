{
  "name": "@icap-ethiopia/esm-ethiohri-app",
  "version": "1.0.0",
  "license": "MPL-2.0",
  "author": "ICAP Ethiopia",
  "description": "A microfrontend ethiohri OpenMRS",
  "browser": "dist/openmrs-esm-ethiohri-app.js",
  "main": "src/index.ts",
  "source": true,
  "scripts": {
    "start": "openmrs develop",
    "serve": "webpack serve --mode=development",
    "build": "webpack --mode production",
    "analyze": "webpack --mode=production --env.analyze=true",
    "lint": "eslint src --ext js,jsx,ts,tsx",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "typescript": "tsc",
    "test": "jest --config jest.config.js --passWithNoTests",
    "verify": "concurrently 'yarn:lint' 'yarn:test' 'yarn:typescript'",
    "coverage": "yarn test -- --coverage",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && yarn verify"
    }
  },
  "browserslist": [
    "extends browserslist-config-openmrs"
  ],
  "keywords": [
    "openmrs",
    "microfrontends",
    "ethiohri"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CDC-HIS/openmrs-esm-ethiohri.git"
  },
  "homepage": "https://github.com/CDC-HIS/openmrs-esm-ethiohri#readme",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/CDC-HIS/openmrs-esm-ethiohri/issues"
  },
  "dependencies": {
    "@adobe/react-spectrum": "^3.19.0",
    "@carbon/react": "^1.17.0",
    "@ohri/openmrs-esm-ohri-commons-lib": "^1.0.2",
    "@ohri/openmrs-ohri-form-engine-lib": "^1.0.1",
    "dayjs": "^1.8.16",
    "lodash-es": "^4.17.15"
  },
  "peerDependencies": {
    "@openmrs/esm-framework": "4.x",
    "react": "18.x",
    "rxjs": "6.x"
  },
  "devDependencies": {
    "@openmrs/esm-framework": "^4.0.3-pre.434",
    "@openmrs/esm-patient-common-lib": "next",
    "@openmrs/esm-styleguide": "4.x",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.6",
    "@swc/jest": "^0.2.23",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.3",
    "@types/lodash": "^4.14.190",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.9",
    "@types/webpack-env": "^1.18.0",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.45.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-ts-react-important-stuff": "^3.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^28.0.0",
    "jest-cli": "^28.0.0",
    "jest-environment-jsdom": "^28.1.2",
    "openmrs": "^4.0.3-pre.434",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^11.18.6",
    "rxjs": "^7.5.7",
    "typescript": "^4.9.3",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1"
  },
  "resolutions": {
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.9"
  },
  "packageManager": "yarn@3.2.2"
}
